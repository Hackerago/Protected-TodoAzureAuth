<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="TodoAzure.LoginPage" Title="Login"
             x:Name="LoginPageName"
             BindingContext="{x:Reference LoginPageName}">
	<StackLayout VerticalOptions="Center">
		<Button Text="Login" Clicked="OnLoginButtonClicked" />
		<Label Text="Previous Authentication Attempt:" HorizontalTextAlignment="Start" FontAttributes="Bold" />
		<Label Text="{Binding LastAuthStatus}" HorizontalTextAlignment="Start" />
	</StackLayout>
</ContentPage>